<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.nln.nedroidteacher.Setting1"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:paddingTop="2dp"
                android:paddingBottom="0dp"
                android:text="Notification"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <Switch
                android:id="@+id/simpleSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="12dp"
                android:checked="true"
                android:gravity="left"
                android:textOff="No"
                android:textOn="Yes"
                android:layout_centerHorizontal="true"
                android:textColor="#808B96"
                android:layout_marginBottom="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808B96" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:paddingTop="2dp"
                android:paddingBottom="0dp"
                android:text="Authentication"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <Switch
                android:id="@+id/switchLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="12dp"
                android:checked="false"
                android:gravity="left"
                android:textOff="No"
                android:textOn="Yes"
                android:layout_centerHorizontal="true"
                android:textColor="#808B96"
                android:layout_marginBottom="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808B96" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:paddingTop="2dp"
                android:paddingBottom="0dp"
                android:text="Setting"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <Switch
                android:id="@+id/switchRememeber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="12dp"
                android:checked="true"
                android:gravity="left"
                android:textOff="No"
                android:textOn="Yes"
                android:layout_centerHorizontal="true"
                android:textColor="#808B96"
                android:layout_marginBottom="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808B96" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:paddingTop="2dp"
                android:paddingBottom="0dp"
                android:text="Clear Data"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkboxLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="12dp"
                android:checked="false"
                android:gravity="right"
                android:textColor="#808B96"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="right"
                android:text="Clear the Data from Mobile"
                android:textAlignment="textStart"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                app:buttonTint="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                app:buttonTintMode="@color/colorPrimary"
                android:buttonTint="@color/colorPrimary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808B96" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:paddingTop="2dp"
                android:paddingBottom="0dp"
                android:text="Notification"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="12dp"
                android:textSize="15sp"
                android:paddingTop="2dp"
                android:paddingBottom="10dp"
                android:text="Notification"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808B96" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

