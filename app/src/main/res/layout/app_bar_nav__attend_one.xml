<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context="com.example.nln.nedroidteacher.Nav_AttendOne"
    android:orientation="vertical"
    android:background="@color/viewBg">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

        <TextView
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:text="Enter Details"
            android:id="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:textSize="35dp"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="0dp"
            tools:ignore="ObsoleteLayoutParam"
            android:textColor="@color/album_title"
            android:textStyle="bold"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:elevation="3dp"
                    card_view:cardCornerRadius="2dp"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="20dp">

                    <EditText
                        android:id="@+id/lecture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="3"
                        android:hint="Enter Lecture Topic"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:elevation="4dp"
                    card_view:cardCornerRadius="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="5dp">

                    <LinearLayout
                        android:id="@+id/LinearThree"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="0dp">

                    <Spinner
                        android:id="@+id/spinner_course"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="2dp"
                        android:scrollbars="vertical"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/spinner_section"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="2dp"
                        android:scrollbars="vertical"
                        android:layout_weight="1"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:elevation="3dp"
                    card_view:cardCornerRadius="2dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/viewBg">

                    <LinearLayout
                        android:id="@+id/LinearTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="0dp">

                        <LinearLayout
                            android:id="@+id/LinearTwoA"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/textTwoB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Regular"
                                android:textSize="20dp"
                                android:textStyle="normal"
                                android:paddingTop="5dp"
                                tools:ignore="HardcodedText"
                                android:layout_weight="1"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

                            <TextView
                                android:id="@+id/textTwoA"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Compensatory"
                                android:textSize="20dp"
                                android:textStyle="normal"
                                android:paddingTop="5dp"
                                android:layout_weight="1"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>
                        </LinearLayout>
                        <RadioGroup
                            android:id="@+id/RadioGroupOne"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp">
                            <RadioButton
                                android:id="@+id/Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:checked="false"
                                android:layout_weight="1"/>
                            <RadioButton
                                android:id="@+id/Compensatory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:checked="false"
                                android:layout_weight="1"/>
                        </RadioGroup>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:elevation="4dp"
                    card_view:cardCornerRadius="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="5dp">

                    <Spinner
                        android:id="@+id/spinner_timeslot"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="2dp"
                        android:scrollbars="vertical"
                        android:layout_marginTop="10dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:elevation="3dp"
                    card_view:cardCornerRadius="2dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/viewBg">

                    <LinearLayout
                        android:id="@+id/LinearFour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="0dp">

                        <LinearLayout
                            android:id="@+id/LinearFourA"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/textFourB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Theory"
                                android:textSize="20dp"
                                android:textStyle="normal"
                                android:paddingTop="5dp"
                                tools:ignore="HardcodedText"
                                android:layout_weight="1"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>
                            <TextView
                                android:id="@+id/textFourA"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Practical"
                                android:textSize="20dp"
                                android:textStyle="normal"
                                android:paddingTop="5dp"
                                android:layout_weight="1"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>
                        </LinearLayout>
                        <RadioGroup
                            android:id="@+id/RadioGroupTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp">
                            <RadioButton
                                android:id="@+id/Theory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:checked="false"
                                android:layout_weight="1"/>
                            <RadioButton
                                android:id="@+id/Practical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:checked="false"
                                android:layout_weight="1"/>
                        </RadioGroup>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button_create"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="40dp"
            android:text="@string/creat_sheet"
            android:background="@color/colorPrimary"
            android:textColor="#FFFF"
            tools:ignore="RtlHardcoded"
            android:onClick="onClick"
            android:textAlignment="center"/>

</LinearLayout>
