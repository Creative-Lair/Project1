<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.nln.nedroid.PageOne.FragmentTwo">

    <TextView
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:text="@string/select_details"
        android:id="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:layout_marginLeft="0dp"
        tools:ignore="ObsoleteLayoutParam" />

    <LinearLayout
        android:id="@+id/LinearOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:id="@+id/LinearOneA"
            android:layout_width="384dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/textOneA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Courses"
                android:textSize="20dp"
                android:textStyle="normal"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:layout_marginLeft="70dp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/textOneB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section"
                android:textSize="20dp"
                android:textStyle="normal"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:layout_marginLeft="89dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearOneB"
            android:layout_width="384dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <Spinner
                android:id="@+id/spinner_course"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:prompt="@string/spinner_title"
                android:layout_marginLeft="2dp" />
            <Spinner
                android:id="@+id/spinner_section"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:prompt="@string/spinner_title"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/LinearTwoA"
            android:layout_width="384dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/textTwoA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regular"
                android:textSize="20dp"
                android:textStyle="normal"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:layout_marginLeft="70dp"/>
            <TextView
                android:id="@+id/textTwoB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compensatory"
                android:textSize="20dp"
                android:textStyle="normal"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:layout_marginLeft="40dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <RadioGroup
            android:id="@+id/RadioGroupOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="100dp"
                    android:checked="false" />
                <RadioButton
                    android:id="@+id/Compensatory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="100dp"
                    android:checked="false"/>
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:id="@+id/textThreeA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/time_slot"
        android:textSize="25dp"
        android:textStyle="normal"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:layout_marginLeft="0dp"
        tools:ignore="RtlHardcoded"
        android:layout_marginTop="15dp"/>
    <Spinner
        android:id="@+id/spinner_timeslot"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"/>

    <LinearLayout
        android:id="@+id/LinearFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp">
        <LinearLayout
            android:id="@+id/LinearFourA"
            android:layout_width="384dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/textFourA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/theory"
                android:textSize="20dp"
                android:textStyle="normal"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:layout_marginLeft="80dp"/>
            <TextView
                android:id="@+id/textFourB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/practicle"
                android:textSize="20dp"
                android:textStyle="normal"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:layout_marginLeft="45dp"/>
        </LinearLayout>
        <RadioGroup
            android:id="@+id/RadioGroupTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/LinearFourB"
                android:layout_width="384dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                <RadioButton
                    android:id="@+id/Theory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="100dp"/>
                <RadioButton
                    android:id="@+id/Practical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="100dp"/>
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/button_create"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:text="@string/creat_sheet"
        android:background="@color/colorAccent"
        android:textColor="#FFFF"
        tools:ignore="RtlHardcoded"
        android:onClick="onClick" />

</LinearLayout>
