<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.nln.nedroidteacher.First.FragmentOne"
    android:weightSum="1">

    <TextView
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:text="Attendance"
        android:id="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="0dp"
        tools:ignore="ObsoleteLayoutParam"
        android:textColor="@color/album_title" />

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1.5dp"-->
        <!--android:background="@color/yellow"-->
        <!--android:layout_marginBottom="3dp"-->
        <!--android:layout_marginTop="2dp"/>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="2dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="0.23"
        android:background="#E3F2FD">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:elevation="3dp"
                card_view:cardCornerRadius="2dp"
                android:layout_marginBottom="4dp"
                android:background="@color/viewBg"
                android:paddingLeft="20dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter Lecture Topic"
                    android:layout_weight="3"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:elevation="4dp"
                card_view:cardCornerRadius="2dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="5dp">

                <Spinner
                    android:id="@+id/spinner_course"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:scrollbars="vertical"
                    android:layout_marginTop="10dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:elevation="3dp"
                card_view:cardCornerRadius="2dp"
                android:layout_marginBottom="4dp"
                android:background="@color/viewBg">

                <Spinner
                    android:id="@+id/spinner_section"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:scrollbars="vertical"
                    android:layout_marginTop="10dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:elevation="3dp"
                card_view:cardCornerRadius="2dp"
                android:layout_marginBottom="4dp"
                android:background="@color/viewBg">

                <LinearLayout
                    android:id="@+id/LinearTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp">

                    <LinearLayout
                        android:id="@+id/LinearTwoA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:id="@+id/textTwoB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Compensatory"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:paddingTop="5dp"
                            tools:ignore="HardcodedText"
                            android:layout_weight="1"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

                        <TextView
                            android:id="@+id/textTwoA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/regular"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:paddingTop="5dp"
                            android:layout_weight="1"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>
                    </LinearLayout>
                    <RadioGroup
                        android:id="@+id/RadioGroupOne"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_marginBottom="5dp">
                        <RadioButton
                            android:id="@+id/Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:checked="false"
                            android:layout_weight="1"/>
                        <RadioButton
                            android:id="@+id/Compensatory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:checked="false"
                            android:layout_weight="1"/>
                    </RadioGroup>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:elevation="4dp"
                card_view:cardCornerRadius="2dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="5dp">

                <Spinner
                    android:id="@+id/spinner_timeslot"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:scrollbars="vertical"
                    android:layout_marginTop="10dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:elevation="3dp"
                    card_view:cardCornerRadius="2dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/viewBg">

                <LinearLayout
                    android:id="@+id/LinearFour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp">

                    <LinearLayout
                        android:id="@+id/LinearFourA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:id="@+id/textFourB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Theory"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:paddingTop="5dp"
                            tools:ignore="HardcodedText"
                            android:layout_weight="1"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

                        <TextView
                            android:id="@+id/textFourA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/regular"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:paddingTop="5dp"
                            android:layout_weight="1"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>
                    </LinearLayout>
                    <RadioGroup
                        android:id="@+id/RadioFourOne"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_marginBottom="5dp">
                        <RadioButton
                            android:id="@+id/Theory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:checked="false"
                            android:layout_weight="1"/>
                        <RadioButton
                            android:id="@+id/Practical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:checked="false"
                            android:layout_weight="1"/>
                    </RadioGroup>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="2dp"/>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1.5dp"-->
        <!--android:background="@color/yellow"-->
        <!--android:layout_marginBottom="1dp"-->
        <!--android:layout_marginTop="2dp"/>-->

    <Button
        android:id="@+id/button_create"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="40dp"
        android:text="@string/creat_sheet"
        android:background="@color/colorAccent"
        android:textColor="#FFFF"
        tools:ignore="RtlHardcoded"
        android:onClick="onClick"
        android:textAlignment="center"/>

</LinearLayout>
