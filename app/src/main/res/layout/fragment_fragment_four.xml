<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nln.nedroid.PageOne.FragmentFour">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graphical Representation"
        android:id="@+id/textView_sem"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:layout_marginLeft="0dp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,SpUsage"
        android:textColor="@color/album_title"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView_sem">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:title="@string/graph_title"
            android:focusable="true" />
    </RelativeLayout>

</LinearLayout>
