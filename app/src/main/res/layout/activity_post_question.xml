<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.nln.nedroid.Forum.PostQuestion"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:text="Post Your Question !!"
        android:id="@+id/textView_sem"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="10dp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,SpUsage"
        android:textColor="@color/album_title"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question: "
        android:textSize="20dp"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SpUsage"
        android:layout_below="@+id/textView_sem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/question"
        android:layout_width="302dp"
        android:layout_height="206dp"
        android:layout_below="@+id/textView_sem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:paddingBottom="40dp"
        tools:ignore="RtlHardcoded,TextFields" />

    <Button
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/buttonSubject"
        android:text="Post"
        android:textColor="#FFFF"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />

    <Spinner
        android:id="@+id/subjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp" />

</RelativeLayout>
